<% if (user !== null) { %>
  <section>
    <h4>Events</h4>
    <br/>
    <ul>
      <% if (user["events"].length === 0) { %>
        <p style="text-align: center">(You haven't joined any events yet!)</p>
      <% } else { %>
        <% for (var i = 0; i < user["events"].length; i++) { %>
          <% var url = "/events" + user.events[i].url %>
          <li><a href=<%= url %>>
            <%= user["events"][i]["name"] %>
          </a></li>
        <% } %>
      <% } %>
    </ul>
  </section>
  <section>
    <a href="/new_event"><h4>Create a New Event</h4></a>
  </section>
  <section>
    <a href="/new_photo"><h4>Add a New Photo</h4></a>
  </section>
<% } %>
<section>
  <% /* The bottom line */ %>
</section>
