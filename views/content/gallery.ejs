<%          /* gallery.ejs */         %>
<%     /* Photo Gallery partial */    %>
<%   /* Written by Brandon Kelley */  %>

<section>
  <h1>Photo Gallery</h1>
  <% var keys = Object.keys(gallery) %>
  <% for (var i = 0; i < keys.length; i++) { %>
    <% var urls = gallery[keys[i]][0]["url"] %>
    <% var img = "/assets/images" + urls["photo"] %>
    <% var link = "/gallery" + urls["album"] %>
    <span class="gallery_thumb" style="margin-right: 16px;">
      <a href=<%= link %>>
        <div>
          <img src=<%= img %> />
        </div>
        <h2><%= keys[i] %></h2>
      </a>
    </span>
  <% } %>
</section>
