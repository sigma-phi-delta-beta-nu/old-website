<section>
  <h1>New Event Form</h1>
  <form id="newEvent">
    <label for="eventName">Event Name: <input type="text"/></label>
    <label for="location">Location: <input type="text"/></label>
    <label for="date">Date: <input type="text"/></label>
    <label for="time">Time: <input type="text"/></label>
    <label for="category">Category: 
      <select>
        <option>Social</option>
        <option>Philanthropy</option>
        <option>Professional</option>
      </select>
    </label>
    <label for="privacy">Privacy: 
      <select>
        <option>Public</option>
        <option>Private</option>
      </select>
    </label>
    <label for="cost">Cost: <input type="text"/></label>
    <label for="description">Description: 
      <textarea rows="5" cols="25"></textarea>
    </label>
    <label>
      <button id="addEvent" type="button">Submit</button>
    </label>
  </form>
</section>
